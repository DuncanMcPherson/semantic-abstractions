<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Nullable>enable</Nullable>
        <Authors>Duncan McPherson</Authors>
        <Description>Public interface for the SemanticRelease plugin system</Description>
        <PackageProjectUrl>https://github.com/DuncanMcPherson/semantic-abstractions    </PackageProjectUrl>
        <RepositoryUrl>https://github.com/DuncanMcPherson/semantic-abstractions</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>release</PackageTags>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Version>1.0.1</Version>
    </PropertyGroup>

    <ItemGroup>
        <None Include="LICENSE.md" Pack="true" PackagePath="" />
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>

</Project>
